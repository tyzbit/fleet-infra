apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: kiali
  namespace: flux-system
spec:
  chart:
    spec:
      chart: kiali-operator
      sourceRef:
        kind: HelmRepository
        name: kiali-helm-charts
        namespace: flux-system
  interval: 1m0s
  values:
    cr: 
      create: "true"
      namespace: istio-system
      spec:
        auth:
          strategy: anonymous