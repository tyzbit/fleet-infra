apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: grafana
  namespace: flux-system
spec:
  targetNamespace: monitoring
  releaseName: grafana
  dependsOn:
    - name: longhorn
      namespace: flux-system
  chart:
    spec:
      chart: grafana
      sourceRef:
        kind: HelmRepository
        name: grafana
        namespace: flux-system
  interval: 1m0s
  values:
    namespaceOverride: monitoring
    # podAnnotations:
    #   linkerd.io/inject: enabled
    persistence:
      enabled: true
      storageClass: longhorn