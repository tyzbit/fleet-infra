apiVersion: v1
kind: Service
metadata:
  name: deluge-incoming
spec:
  type: NodePort
  selector:
    app.kubernetes.io/instance: default-deluge
    app.kubernetes.io/name: deluge
  ports:
  - name: tcp
    protocol: TCP
    port: 58946
    targetPort: 58946
    nodePort: 32000
  - name: udp
    protocol: UDP
    port: 58946
    targetPort: 58946
    nodePort: 32000
---
